<h1>All the Nannies :</h1>
<br>
<div class= "result">


      <% @nannies.each do |nanny| %>
        <div class="nanny-card">

          <%# <%= cl_image_tag @nanny.photo.key, height: 150, width: 150, crop: :fill %>

          <%= cl_image_tag("https://res.cloudinary.com/dhxefoe7j/image/upload/v1661784842/holder_fuevmf.png", :width=>160, :height=>160, :crop=>"fill")%>

          <div class="info">
            <p class="my-nanny">
              <% if nanny.user == current_user %>
              my nanny <i class="fa-solid fa-image-portrait"></i>
              <%end%>

            </p>
            <ul>

              <li class="firstname"> <%= nanny.first_name %></li>
              <li class="lastname"> <%= nanny.last_name %></li>
              <li> <%= nanny.email %></li>
              <li>Price per day : <%= nanny.price_per_day %></li>
              <li>nanny id : <%= nanny.id %></strong></li>
              <br>
              <li>created by user id : <%= nanny.user.email %>
              <br>
                <% if nanny.user == current_user %>
                <%= link_to "Edit this Nanny", edit_nanny_path(nanny.user.id, nanny.id) %>
                <br>
                <%= link_to "Delete", nanny_path(nanny.user.id, nanny.id), method: :delete, data: { confirm: "Are you sure?" }, class:"delete" %>
                <% else %> <br>
                <%= link_to "ğŸ‘‰ Book", new_nanny_booking_path(nanny), class:"book" %></li>
                <% end %>

            </ul>
          </div>

        </div>
      <% end %>

</div>

