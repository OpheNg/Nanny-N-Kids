<h2> Edit Nanny's profile </h2>
<br>
<%# <h4>Selected nanny:</h4> %>

<div class="nanny-edition">


    <div class="selected-nanny">
      <%= cl_image_tag @nanny.photo.key, height: 150, width: 150, crop: :fill %>

      <div class="bloc-nanny">
        <h2> <%= @nanny.first_name %> <%= @nanny.last_name %></h2>
        <ul>
            <%# <li>Created by user id : <%= @nanny.user.id %>
            <%# <li>Nanny id nÂ°:<%= @nanny.id %>
          <li><i class="fa-solid fa-location-dot"></i> <b>  Address</b> :<%= @nanny.address %>
          <li><i class="fa-solid fa-at"></i> <b>  Email</b> :<%= @nanny.email %>
          <li><i class="fa-solid fa-dollar-sign"></i> <b>  Price per day </b>: <%= @nanny.price_per_day %></li>
          <li><i class="fa-solid fa-user"></i> <b>  Description</b> :<%= @nanny.description %></li>
        </ul>
      </div>
    </div>

    <br>

    <div class="edit-nanny-form">
        <h3> Modify your profile here :</h3>
        <br>

        <%# remmplacer @user par @nanny, faut changer toutes les routes pour le create et le new %>

        <%= simple_form_for [@nanny] do |f| %>
          <%= f.input :photo, as: :file %>
          <%= f.input :address %>
          <%= f.input :email %>
          <%= f.input :description %>
          <%= f.input :price_per_day %>

          <%= f.button :submit %>

        <% end %>
    </div>



</div>
